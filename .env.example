# Rollercoaster.dev Monorepo Environment Configuration
# Copy this file to .env and customize values for your local environment

# ==============================================================================
# GENERAL ENVIRONMENT
# ==============================================================================

# Node Environment (development, production, test)
# Affects build optimizations, logging behavior, and default configurations
NODE_ENV=development

# ==============================================================================
# LOGGING (for @rollercoaster-dev/rd-logger)
# ==============================================================================

# Log Level (debug, info, warn, error, fatal)
# Controls which log messages are output based on severity
LOG_LEVEL=info

# Debug Queries (true, false)
# When true, logs ALL database queries at debug level
# When false, only logs slow queries (above threshold)
DEBUG_QUERIES=false

# ==============================================================================
# CI/CD ENVIRONMENT
# ==============================================================================

# CI Flag (true when running in CI)
# Automatically set by most CI providers (GitHub Actions, etc.)
# CI=true

# ==============================================================================
# GITHUB CLI (gh)
# ==============================================================================

# GitHub Personal Access Token for gh CLI authentication
# Required for: fetching issues, creating PRs, repo operations
# Create at: https://github.com/settings/tokens
# Scopes needed: repo, read:org (for org repos)
# For Claude Code Web: Set this in the Web UI environment variables
# GH_TOKEN=ghp_your_token_here

