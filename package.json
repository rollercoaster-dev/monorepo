{
  "name": "rollercoaster-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for Rollercoaster.dev OpenBadges ecosystem",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run turbo dev",
    "build": "bun run turbo build",
    "test": "bun run turbo test",
    "test:unit": "bun run turbo test:unit",
    "test:integration": "bun run turbo test:integration",
    "test:e2e": "bun run turbo test:e2e",
    "test:coverage": "bun run turbo test:coverage",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:e2e",
    "lint": "bun run turbo lint",
    "lint:fix": "bun run turbo lint --fix",
    "type-check": "bun run turbo type-check",
    "format": "bunx prettier --write \"**/*.{ts,tsx,js,jsx,json,md,vue}\"",
    "format:check": "bunx prettier --check \"**/*.{ts,tsx,js,jsx,json,md,vue}\"",
    "clean": "bun run turbo clean && rm -rf node_modules .turbo .bun-cache",
    "changeset": "bunx changeset",
    "changeset:version": "bunx changeset version",
    "changeset:publish": "bunx changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@types/bun": "latest",
    "@types/node": "^22.15.21",
    "eslint": "^9.24.0",
    "prettier": "^3.7.3",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.2",
  "engines": {
    "bun": ">=1.3.2"
  }
}
