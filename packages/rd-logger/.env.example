# Environment Configuration for @rollercoaster-dev/rd-logger

# Node Environment (development, production, test)
# Affects default logger behavior and query logging
NODE_ENV=development

# Log Level (debug, info, warn, error, fatal)
# Controls which log messages are output based on severity
LOG_LEVEL=info

# Debug Queries (true, false)
# When true, logs ALL database queries at debug level
# When false, only logs slow queries (above threshold)
DEBUG_QUERIES=false
