{
  "extends": "@rollercoaster-dev/shared-config/tsconfig",
  "compilerOptions": {
    // Project structure
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",

    // Enable emit (override shared config's noEmit)
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,

    // Module resolution for Node.js package
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,

    // Relax some strict checks (original config was less strict)
    "noUncheckedIndexedAccess": false,
    "isolatedModules": false,

    // Type definitions
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
