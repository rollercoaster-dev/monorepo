{
  "name": "openbadges-types",
  "version": "3.2.3",
  "type": "module",
  "packageManager": "bun@1.3.2",
  "description": "TypeScript type definitions for Open Badges 2.0 and 3.0 specifications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '{src,test}/**/*.ts'",
    "format:check": "prettier --check '{src,test}/**/*.ts'",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun run test",
    "test:integration": "echo 'No integration tests'",
    "test:e2e": "echo 'No E2E tests'",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "validate": "bun run lint && bun run format:check && bun run test && bun run validate:package",
    "validate:package": "bun run build && bunx publint && bunx @arethetypeswrong/cli . --pack"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rollercoaster-dev/monorepo.git",
    "directory": "packages/openbadges-types"
  },
  "keywords": [
    "open-badges",
    "badges",
    "typescript",
    "types",
    "verifiable-credentials"
  ],
  "author": "Rollercoaster.dev <team@rollercoaster.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rollercoaster-dev/monorepo/issues"
  },
  "homepage": "https://github.com/rollercoaster-dev/monorepo/tree/main/packages/openbadges-types#readme",
  "devDependencies": {
    "@rollercoaster-dev/shared-config": "workspace:*",
    "@types/bun": "^1.3.2",
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
