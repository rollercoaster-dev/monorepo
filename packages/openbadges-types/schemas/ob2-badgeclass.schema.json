{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ob2-badgeclass.schema.json",
  "title": "Open Badges 2.0 BadgeClass",
  "description": "JSON Schema for validating Open Badges 2.0 BadgeClass objects",
  "type": "object",
  "required": ["id", "type", "name", "description", "criteria", "issuer"],
  "properties": {
    "@context": { "type": ["string", "array", "object"] },
    "id": { "type": "string", "format": "uri" },
    "type": {
      "type": ["string", "array"],
      "contains": { "const": "BadgeClass" }
    },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 1 },
    "image": {
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "$ref": "#/definitions/Image" }
      ]
    },
    "criteria": { "$ref": "#/definitions/Criteria" },
    "issuer": {
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "$ref": "#/definitions/Profile" }
      ]
    },
    "alignment": {
      "type": "array",
      "items": { "$ref": "#/definitions/AlignmentObject" }
    },
    "tags": { "type": "array", "items": { "type": "string" } }
  },
  "definitions": {
    "Image": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" },
        "caption": { "type": "string" },
        "author": { "type": "string" }
      }
    },
    "Criteria": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "narrative": { "type": "string" }
      }
    },
    "Profile": {
      "type": "object",
      "required": ["id", "type", "name"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "type": ["string", "array"],
          "contains": { "enum": ["Profile", "Issuer"] }
        },
        "name": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri" },
        "email": { "type": "string" },
        "description": { "type": "string" },
        "image": {
          "oneOf": [
            { "type": "string", "format": "uri" },
            { "$ref": "#/definitions/Image" }
          ]
        },
        "verification": { "$ref": "#/definitions/VerificationObject" },
        "revocationList": { "type": "string", "format": "uri" }
      }
    },
    "VerificationObject": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": ["string", "array"] },
        "verificationProperty": { "type": "string" },
        "startsWith": { "type": ["string", "array"] },
        "allowedOrigins": { "type": ["string", "array"] },
        "creator": { "type": "string", "format": "uri" }
      }
    },
    "AlignmentObject": {
      "type": "object",
      "required": ["targetName", "targetUrl"],
      "properties": {
        "targetName": { "type": "string" },
        "targetUrl": { "type": "string", "format": "uri" },
        "targetDescription": { "type": "string" },
        "targetFramework": { "type": "string" },
        "targetCode": { "type": "string" }
      }
    }
  },
  "additionalProperties": true
}
