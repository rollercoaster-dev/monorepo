{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ob3-credential.schema.json",
  "title": "Open Badges 3.0 VerifiableCredential",
  "description": "JSON Schema for validating Open Badges 3.0 VerifiableCredentials based on W3C VC 2.0",
  "type": "object",
  "required": [
    "@context",
    "id",
    "type",
    "issuer",
    "validFrom",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "description": "JSON-LD context - must include VC and OB3 contexts",
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": ["string", "object"] },
          "minItems": 1
        },
        { "type": "object" }
      ]
    },
    "id": {
      "type": "string",
      "format": "uri",
      "description": "Unique identifier for this credential"
    },
    "type": {
      "description": "Must include 'VerifiableCredential' and 'OpenBadgeCredential'",
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" },
          "contains": { "const": "VerifiableCredential" }
        }
      ]
    },
    "name": {
      "oneOf": [
        { "type": "string" },
        { "$ref": "#/definitions/MultiLanguageString" }
      ],
      "description": "Human-readable name for the credential"
    },
    "description": {
      "oneOf": [
        { "type": "string" },
        { "$ref": "#/definitions/MultiLanguageString" }
      ],
      "description": "Human-readable description"
    },
    "issuer": {
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "$ref": "#/definitions/Issuer" }
      ],
      "description": "The issuer of the credential (IRI or Issuer object)"
    },
    "validFrom": {
      "type": "string",
      "description": "ISO 8601 datetime when credential becomes valid"
    },
    "validUntil": {
      "type": "string",
      "description": "ISO 8601 datetime when credential expires"
    },
    "credentialSubject": {
      "$ref": "#/definitions/CredentialSubject",
      "description": "Claims about the subject (recipient and achievement)"
    },
    "credentialSchema": {
      "oneOf": [
        { "$ref": "#/definitions/CredentialSchema" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/CredentialSchema" }
        }
      ],
      "description": "Schema(s) used to validate credential structure"
    },
    "credentialStatus": {
      "$ref": "#/definitions/CredentialStatus",
      "description": "Revocation or suspension status"
    },
    "refreshService": {
      "$ref": "#/definitions/RefreshService",
      "description": "Service for refreshing the credential"
    },
    "termsOfUse": {
      "oneOf": [
        { "$ref": "#/definitions/TermsOfUse" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/TermsOfUse" }
        }
      ]
    },
    "evidence": {
      "oneOf": [
        { "$ref": "#/definitions/Evidence" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/Evidence" }
        }
      ],
      "description": "Evidence supporting the credential"
    },
    "proof": {
      "oneOf": [
        { "$ref": "#/definitions/Proof" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/Proof" }
        }
      ],
      "description": "Cryptographic proof of authenticity"
    }
  },
  "definitions": {
    "MultiLanguageString": {
      "type": "object",
      "description": "Multi-language string with language codes as keys",
      "additionalProperties": { "type": "string" }
    },
    "Issuer": {
      "type": "object",
      "required": ["id", "type", "name"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "name": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/MultiLanguageString" }
          ]
        },
        "description": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/MultiLanguageString" }
          ]
        },
        "url": { "type": "string", "format": "uri" },
        "email": { "type": "string", "format": "email" },
        "image": {
          "oneOf": [
            { "type": "string", "format": "uri" },
            { "$ref": "#/definitions/Image" }
          ]
        },
        "otherIdentifier": {
          "type": "array",
          "items": { "$ref": "#/definitions/IdentifierEntry" }
        }
      }
    },
    "CredentialSubject": {
      "type": "object",
      "required": ["achievement"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "achievement": {
          "oneOf": [
            { "$ref": "#/definitions/Achievement" },
            {
              "type": "array",
              "items": { "$ref": "#/definitions/Achievement" },
              "minItems": 1
            }
          ]
        },
        "identifier": {
          "type": "array",
          "items": { "$ref": "#/definitions/IdentityObject" }
        },
        "result": {
          "type": "array",
          "items": { "$ref": "#/definitions/Result" }
        },
        "source": { "$ref": "#/definitions/Profile" }
      }
    },
    "Achievement": {
      "type": "object",
      "required": ["id", "type", "name", "criteria"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "string" },
              "contains": { "const": "Achievement" }
            }
          ]
        },
        "name": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/MultiLanguageString" }
          ]
        },
        "description": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/MultiLanguageString" }
          ]
        },
        "image": {
          "oneOf": [
            { "type": "string", "format": "uri" },
            { "$ref": "#/definitions/Image" }
          ]
        },
        "criteria": { "$ref": "#/definitions/Criteria" },
        "achievementType": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "creator": {
          "oneOf": [
            { "type": "string", "format": "uri" },
            { "$ref": "#/definitions/Profile" }
          ]
        },
        "creditsAvailable": { "type": "number" },
        "fieldOfStudy": { "type": "string" },
        "humanCode": { "type": "string" },
        "inLanguage": { "type": "string" },
        "otherIdentifier": {
          "type": "array",
          "items": { "$ref": "#/definitions/IdentifierEntry" }
        },
        "related": {
          "type": "array",
          "items": { "$ref": "#/definitions/Related" }
        },
        "resultDescription": {
          "type": "array",
          "items": { "$ref": "#/definitions/ResultDescription" }
        },
        "specialization": { "type": "string" },
        "tag": {
          "type": "array",
          "items": { "type": "string" }
        },
        "version": { "type": "string" },
        "alignment": {
          "type": "array",
          "items": { "$ref": "#/definitions/Alignment" }
        }
      }
    },
    "Criteria": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "narrative": { "type": "string" }
      }
    },
    "Image": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" },
        "caption": { "type": "string" }
      }
    },
    "Profile": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "name": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/MultiLanguageString" }
          ]
        },
        "url": { "type": "string", "format": "uri" },
        "email": { "type": "string", "format": "email" },
        "description": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/MultiLanguageString" }
          ]
        },
        "image": {
          "oneOf": [
            { "type": "string", "format": "uri" },
            { "$ref": "#/definitions/Image" }
          ]
        }
      }
    },
    "IdentityObject": {
      "type": "object",
      "required": ["type", "identityHash", "hashed"],
      "properties": {
        "type": { "type": "string" },
        "identityHash": { "type": "string" },
        "identityType": { "type": "string" },
        "hashed": { "type": "boolean" },
        "salt": { "type": "string" }
      }
    },
    "IdentifierEntry": {
      "type": "object",
      "required": ["type", "identifier", "identifierType"],
      "properties": {
        "type": { "type": "string" },
        "identifier": { "type": "string" },
        "identifierType": { "type": "string" }
      }
    },
    "Result": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "achievedLevel": { "type": "string", "format": "uri" },
        "alignment": {
          "type": "array",
          "items": { "$ref": "#/definitions/Alignment" }
        },
        "resultDescription": { "type": "string", "format": "uri" },
        "status": { "type": "string" },
        "value": { "type": "string" }
      }
    },
    "ResultDescription": {
      "type": "object",
      "required": ["id", "type", "name"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "name": { "type": "string" },
        "alignment": {
          "type": "array",
          "items": { "$ref": "#/definitions/Alignment" }
        },
        "allowedValue": {
          "type": "array",
          "items": { "type": "string" }
        },
        "requiredLevel": { "type": "string", "format": "uri" },
        "requiredValue": { "type": "string" },
        "resultType": { "type": "string" },
        "rubricCriterionLevel": {
          "type": "array",
          "items": { "$ref": "#/definitions/RubricCriterionLevel" }
        },
        "valueMax": { "type": "string" },
        "valueMin": { "type": "string" }
      }
    },
    "RubricCriterionLevel": {
      "type": "object",
      "required": ["id", "type", "name"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "name": { "type": "string" },
        "alignment": {
          "type": "array",
          "items": { "$ref": "#/definitions/Alignment" }
        },
        "description": { "type": "string" },
        "level": { "type": "string" },
        "points": { "type": "string" }
      }
    },
    "Related": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "inLanguage": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "Alignment": {
      "type": "object",
      "required": ["type", "targetName", "targetUrl"],
      "properties": {
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "targetCode": { "type": "string" },
        "targetDescription": { "type": "string" },
        "targetFramework": { "type": "string" },
        "targetName": { "type": "string" },
        "targetType": { "type": "string" },
        "targetUrl": { "type": "string", "format": "uri" }
      }
    },
    "Evidence": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "narrative": { "type": "string" },
        "genre": { "type": "string" },
        "audience": { "type": "string" }
      }
    },
    "Proof": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string" },
        "created": { "type": "string" },
        "cryptosuite": { "type": "string" },
        "proofPurpose": { "type": "string" },
        "proofValue": { "type": "string" },
        "verificationMethod": { "type": "string" },
        "challenge": { "type": "string" },
        "domain": { "type": "string" },
        "nonce": { "type": "string" }
      }
    },
    "CredentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    },
    "CredentialStatus": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    },
    "RefreshService": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    },
    "TermsOfUse": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    }
  },
  "additionalProperties": true
}
