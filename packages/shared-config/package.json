{
  "name": "@rollercoaster-dev/shared-config",
  "version": "0.0.0",
  "private": true,
  "description": "Shared configuration for ESLint, TypeScript, and Prettier across the monorepo",
  "type": "module",
  "exports": {
    "./eslint": "./eslint.config.mjs",
    "./prettier": "./prettier.config.mjs",
    "./tsconfig": "./tsconfig.base.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '*.{js,mjs,json}'",
    "format:check": "prettier --check '*.{js,mjs,json}'",
    "test": "exit 0",
    "test:unit": "exit 0",
    "test:integration": "exit 0",
    "test:e2e": "exit 0",
    "type-check": "exit 0"
  },
  "files": [
    "eslint.config.mjs",
    "prettier.config.mjs",
    "tsconfig.base.json"
  ],
  "keywords": [
    "eslint",
    "prettier",
    "typescript",
    "config"
  ],
  "dependencies": {
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.32.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.8.3"
  }
}
