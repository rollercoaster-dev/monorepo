{
  "$name": "large-text",
  "$description": "Large text theme - increased font sizes for better readability",
  "theme": {
    "font": {
      "size": {
        "xs": { "$value": "0.875rem" },
        "sm": { "$value": "1rem" },
        "md": { "$value": "1.125rem" },
        "lg": { "$value": "1.25rem" },
        "xl": { "$value": "1.5rem" },
        "2xl": { "$value": "1.75rem" }
      },
      "lineHeight": {
        "tight": { "$value": "1.4" },
        "normal": { "$value": "1.6" },
        "relaxed": { "$value": "1.8" }
      }
    },
    "space": {
      "between-paragraphs": { "$value": "1.5em" }
    }
  }
}
