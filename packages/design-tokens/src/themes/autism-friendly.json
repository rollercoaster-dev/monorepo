{
  "$name": "autism-friendly",
  "$description": "Autism-friendly theme - predictable layouts, muted palette, no shadows, reduced sensory stimulation",
  "theme": {
    "typography": {
      "font-family": { "$value": "'Arial', sans-serif" },
      "text-primary": { "$value": "#333333" }
    },
    "font": {
      "size": {
        "md": { "$value": "1rem" }
      },
      "lineHeight": {
        "normal": { "$value": "1.5" }
      },
      "weight": {
        "normal": { "$value": "400" }
      }
    },
    "surface": {
      "background": { "$value": "#f7f7f7" },
      "foreground": { "$value": "#333333" },
      "card": { "$value": "#f7f7f7" },
      "card-foreground": { "$value": "#333333" },
      "popover": { "$value": "#f7f7f7" },
      "popover-foreground": { "$value": "#333333" },
      "muted": { "$value": "#eeeeee" },
      "muted-foreground": { "$value": "#666666" }
    },
    "interactive": {
      "primary": { "$value": "#5a7a8a" },
      "primary-foreground": { "$value": "#ffffff" },
      "secondary": { "$value": "#8a7a9a" }
    },
    "color": {
      "primary": { "$value": "#5a7a8a" },
      "primary-dark": { "$value": "#3d5d6d" },
      "primary-light": { "$value": "#7a9aaa" },
      "secondary": { "$value": "#8a7a9a" },
      "secondary-dark": { "$value": "#6d5d7d" },
      "secondary-light": { "$value": "#a79ab5" },
      "success": { "$value": "#5a8a6a" },
      "success-light": { "$value": "#e0f0e4" },
      "error": { "$value": "#9a5a5a" },
      "error-light": { "$value": "#f0e0e0" },
      "warning": { "$value": "#8a7a5a" },
      "warning-light": { "$value": "#f0ece0" },
      "info": { "$value": "#5a7a9a" },
      "info-light": { "$value": "#e0ecf4" },
      "gray": {
        "50": { "$value": "#f7f7f7" },
        "100": { "$value": "#eeeeee" },
        "200": { "$value": "#e0e0e0" },
        "300": { "$value": "#cccccc" },
        "400": { "$value": "#aaaaaa" },
        "500": { "$value": "#888888" },
        "600": { "$value": "#666666" },
        "700": { "$value": "#444444" },
        "800": { "$value": "#333333" },
        "900": { "$value": "#222222" }
      }
    },
    "form": {
      "border": { "$value": "#dddddd" },
      "input": { "$value": "#eeeeee" },
      "ring": { "$value": "#5a7a8a" }
    },
    "aliases": {
      "bg-primary": { "$value": "#f7f7f7" },
      "border-color": { "$value": "#dddddd" },
      "border-color-focus": { "$value": "#5a7a8a" },
      "border-width": { "$value": "1px" },
      "border-radius-sm": { "$value": "2px" },
      "border-radius-md": { "$value": "4px" }
    },
    "space": {
      "4": { "$value": "1rem" },
      "6": { "$value": "1.5rem" },
      "8": { "$value": "2rem" }
    },
    "shadow": {
      "sm": { "$value": "none" },
      "md": { "$value": "none" },
      "lg": { "$value": "none" },
      "focus": { "$value": "0 0 0 2px rgba(90, 122, 138, 0.4)" }
    },
    "component": {
      "badge": {
        "border-color": { "$value": "#dddddd" },
        "background": { "$value": "#f7f7f7" },
        "title-color": { "$value": "#333333" },
        "text-color": { "$value": "#555555" }
      },
      "form": {
        "input-border": { "$value": "#cccccc" },
        "input-focus": { "$value": "#5a7a8a" },
        "background": { "$value": "#f7f7f7" },
        "button-primary-bg": { "$value": "#5a7a8a" },
        "button-primary-color": { "$value": "#ffffff" }
      }
    }
  }
}
