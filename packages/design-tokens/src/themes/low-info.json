{
  "$name": "low-info",
  "$description": "Low info theme - simplified palette (2-3 accents max), reduced distractions, clear hierarchy",
  "theme": {
    "typography": {
      "font-family": {
        "$value": "'Atkinson Hyperlegible', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
      },
      "text-primary": { "$value": "#222222" }
    },
    "font": {
      "size": {
        "md": { "$value": "1rem" }
      },
      "lineHeight": {
        "normal": { "$value": "1.6" }
      },
      "weight": {
        "normal": { "$value": "400" },
        "medium": { "$value": "600" },
        "bold": { "$value": "700" }
      }
    },
    "surface": {
      "background": { "$value": "#ffffff" },
      "foreground": { "$value": "#222222" },
      "card": { "$value": "#ffffff" },
      "card-foreground": { "$value": "#222222" },
      "popover": { "$value": "#ffffff" },
      "popover-foreground": { "$value": "#222222" },
      "muted": { "$value": "#f0f0f0" },
      "muted-foreground": { "$value": "#444444" }
    },
    "interactive": {
      "primary": { "$value": "#222222" },
      "primary-foreground": { "$value": "#ffffff" },
      "secondary": { "$value": "#666666" },
      "accent": { "$value": "#f0f0f0" },
      "accent-foreground": { "$value": "#222222" }
    },
    "color": {
      "primary": { "$value": "#222222" },
      "primary-dark": { "$value": "#000000" },
      "primary-light": { "$value": "#444444" },
      "secondary": { "$value": "#666666" },
      "secondary-dark": { "$value": "#444444" },
      "secondary-light": { "$value": "#888888" },
      "success": { "$value": "#006400" },
      "success-light": { "$value": "#e0f0e0" },
      "error": { "$value": "#b30000" },
      "error-light": { "$value": "#f0e0e0" },
      "warning": { "$value": "#995500" },
      "warning-light": { "$value": "#f0ece0" },
      "info": { "$value": "#003d99" },
      "info-light": { "$value": "#e0ecf4" },
      "gray": {
        "50": { "$value": "#f5f5f5" },
        "100": { "$value": "#eeeeee" },
        "200": { "$value": "#dddddd" },
        "300": { "$value": "#cccccc" },
        "400": { "$value": "#999999" },
        "500": { "$value": "#666666" },
        "600": { "$value": "#555555" },
        "700": { "$value": "#444444" },
        "800": { "$value": "#222222" },
        "900": { "$value": "#111111" }
      }
    },
    "form": {
      "border": { "$value": "#cccccc" },
      "input": { "$value": "#f5f5f5" },
      "ring": { "$value": "#222222" }
    },
    "aliases": {
      "bg-primary": { "$value": "#ffffff" },
      "border-color": { "$value": "#cccccc" },
      "border-color-focus": { "$value": "#222222" },
      "border-width": { "$value": "2px" },
      "border-radius-sm": { "$value": "0" },
      "border-radius-md": { "$value": "4px" },
      "border-radius-lg": { "$value": "4px" }
    },
    "shadow": {
      "sm": { "$value": "none" },
      "md": { "$value": "none" },
      "lg": { "$value": "none" },
      "focus": { "$value": "0 0 0 3px rgba(34, 34, 34, 0.4)" }
    },
    "component": {
      "badge": {
        "border-color": { "$value": "#cccccc" },
        "border-width": { "$value": "2px" },
        "title-color": { "$value": "#222222" },
        "text-color": { "$value": "#444444" }
      },
      "form": {
        "input-border": { "$value": "#cccccc" },
        "input-focus": { "$value": "#222222" },
        "button-primary-bg": { "$value": "#222222" },
        "button-primary-color": { "$value": "#ffffff" }
      }
    }
  }
}
