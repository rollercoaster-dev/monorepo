{
  "$name": "low-vision",
  "$description": "Low vision theme - Atkinson Hyperlegible font, large sizes, high contrast (minimum 7:1)",
  "theme": {
    "typography": {
      "font-family": {
        "$value": "'Atkinson Hyperlegible', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
      },
      "text-primary": { "$value": "#111111" },
      "text-secondary": { "$value": "#333333" }
    },
    "font": {
      "size": {
        "xs": { "$value": "1rem" },
        "sm": { "$value": "1.125rem" },
        "md": { "$value": "1.25rem" },
        "lg": { "$value": "1.5rem" },
        "xl": { "$value": "1.75rem" },
        "2xl": { "$value": "2rem" },
        "3xl": { "$value": "2.5rem" }
      },
      "lineHeight": {
        "tight": { "$value": "1.5" },
        "normal": { "$value": "1.7" },
        "relaxed": { "$value": "1.9" }
      },
      "weight": {
        "normal": { "$value": "400" },
        "medium": { "$value": "600" },
        "bold": { "$value": "700" }
      },
      "letterSpacing": { "$value": "0.01em" },
      "wordSpacing": { "$value": "0.05em" }
    },
    "surface": {
      "background": { "$value": "#ffffff" },
      "foreground": { "$value": "#111111" },
      "card": { "$value": "#ffffff" },
      "card-foreground": { "$value": "#111111" },
      "popover": { "$value": "#ffffff" },
      "popover-foreground": { "$value": "#111111" },
      "muted": { "$value": "#f0f0f0" },
      "muted-foreground": { "$value": "#333333" }
    },
    "interactive": {
      "primary": { "$value": "#003d99" },
      "primary-foreground": { "$value": "#ffffff" },
      "secondary": { "$value": "#555555" }
    },
    "color": {
      "primary": { "$value": "#003d99" },
      "primary-dark": { "$value": "#002d73" },
      "primary-light": { "$value": "#3366cc" },
      "secondary": { "$value": "#555555" },
      "secondary-dark": { "$value": "#333333" },
      "secondary-light": { "$value": "#777777" },
      "success": { "$value": "#006400" },
      "error": { "$value": "#b30000" },
      "warning": { "$value": "#995500" }
    },
    "feedback": {
      "destructive": { "$value": "#b30000" },
      "success": { "$value": "#006400" },
      "warning": { "$value": "#995500" }
    },
    "form": {
      "border": { "$value": "#555555" },
      "input": { "$value": "#f0f0f0" },
      "ring": { "$value": "#003d99" }
    },
    "aliases": {
      "bg-primary": { "$value": "#ffffff" },
      "bg-secondary": { "$value": "#f0f0f0" },
      "border-color": { "$value": "#555555" },
      "border-color-focus": { "$value": "#003d99" },
      "border-width": { "$value": "3px" },
      "border-radius-sm": { "$value": "4px" },
      "border-radius-md": { "$value": "6px" },
      "border-radius-lg": { "$value": "8px" }
    },
    "shadow": {
      "sm": { "$value": "none" },
      "md": { "$value": "none" },
      "lg": { "$value": "none" },
      "focus": { "$value": "0 0 0 4px rgba(0, 61, 153, 0.5)" }
    },
    "transition": {
      "fast": { "$value": "0ms" },
      "normal": { "$value": "0ms" },
      "slow": { "$value": "0ms" }
    },
    "component": {
      "badge": {
        "border-color": { "$value": "#555555" },
        "border-width": { "$value": "3px" },
        "title-color": { "$value": "#111111" },
        "text-color": { "$value": "#333333" }
      },
      "form": {
        "input-border": { "$value": "#555555" },
        "input-focus": { "$value": "#003d99" },
        "button-primary-bg": { "$value": "#003d99" },
        "button-primary-color": { "$value": "#ffffff" }
      }
    }
  }
}
