{
  "name": "openbadges-ui",
  "version": "1.3.0",
  "description": "Vue 3 component library for implementing Open Badges functionality with accessibility and customization",
  "homepage": "https://rollercoaster-dev.github.io/openbadges-ui/",
  "main": "dist/openbadges-ui.umd.js",
  "module": "dist/openbadges-ui.es.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/openbadges-ui.es.js",
      "require": "./dist/openbadges-ui.umd.js"
    },
    "./styles": {
      "import": "./dist/style.css"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly && bun scripts/fix-aliases.js",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts,vue}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue}\"",
    "type-check": "vue-tsc --noEmit",
    "check": "bun run lint --fix && bun run type-check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "echo 'No E2E tests'",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview"
  },
  "keywords": [
    "vue",
    "vue3",
    "component",
    "open-badges",
    "badges",
    "accessibility",
    "a11y",
    "theming"
  ],
  "author": "Manus AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rollercoaster-dev/monorepo.git",
    "directory": "packages/openbadges-ui"
  },
  "bugs": {
    "url": "https://github.com/rollercoaster-dev/monorepo/issues"
  },
  "engines": {
    "node": ">=20.8.1"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@rollercoaster-dev/design-tokens": "workspace:*",
    "openbadges-types": "workspace:*",
    "uuid": "^9.0.0"
  },
  "sideEffects": [
    "src/styles/index.ts",
    "src/styles/*.css"
  ],
  "devDependencies": {
    "@histoire/plugin-vue": "^0.17.6",
    "@rollercoaster-dev/shared-config": "workspace:*",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-istanbul": "^0.34.0",
    "@vue/test-utils": "^2.4.0",
    "happy-dom": "20.5.0",
    "histoire": "^0.17.6",
    "jsdom": "^22.1.0",
    "terser": "^5.39.0",
    "vite": "^4.5.14",
    "vitest": "^0.34.0",
    "vue": "^3.0.0",
    "vue-tsc": "^3.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
