{
  "name": "openbadges-system",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "dev:local": "./scripts/dev-local.sh",
    "dev:docker": "./scripts/dev-docker.sh",
    "server": "bun run --hot src/server/index.ts",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun run src/server/index.ts",
    "test": "bun run test:client && bun run test:server",
    "test:unit": "bun run test:client",
    "test:integration": "bun run test:server && bun run test:server:vitest",
    "test:e2e": "echo 'No E2E tests'",
    "test:ui": "vitest --ui",
    "test:run": "bun run test:client -- --run && bun run test:server",
    "test:coverage": "vitest run --coverage",
    "test:client": "vitest run -c vitest.client.config.ts",
    "test:server": "bun test src/server/**/*.bun.test.ts",
    "test:server:vitest": "vitest run -c vitest.server.config.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,js,json}\"",
    "type-check": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@rollercoaster-dev/shared-config": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.15.5",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-istanbul": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "10.4.22",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.1.2",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "kysely": "^0.28.5",
    "pg": "^8.16.3",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.17",
    "unplugin-auto-import": "^20.3.0",
    "unplugin-vue-components": "^30.0.0",
    "unplugin-vue-router": "^0.19.0",
    "vite": "^7.2.7",
    "vite-plugin-vue-inspector": "^5.3.2",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.0.1",
    "zod-to-ts": "^2.0.0"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@hono/oauth-providers": "^0.8.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@unhead/vue": "^2.0.9",
    "@vueuse/core": "^13.2.0",
    "hono": "^4.7.10",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "nanoid": "^5.1.5",
    "openapi3-ts": "4.5.0",
    "openbadges-types": "workspace:*",
    "openbadges-ui": "workspace:*",
    "pinia": "^3.0.2",
    "swagger-ui-dist": "5.30.3",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0",
    "zod": "^4.0.15",
    "zod-form-data": "^3.0.0"
  }
}
