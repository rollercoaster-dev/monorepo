{
  "extends": "@rollercoaster-dev/shared-config/tsconfig",
  "compilerOptions": {
    /* Environment overrides for Vue/Vite */
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "allowJs": true,

    /* Module resolution for Vite bundler */
    "moduleResolution": "Bundler",
    "noEmit": true,

    /* Disable declaration emit - shared-config enables it but Vue SFCs can't emit declarations for external types */
    "declaration": false,
    "declarationMap": false,

    /* Strict settings - keep project's existing strictness */
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Vite-specific types */
    "types": ["unplugin-vue-router/client", "vite/client"],

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/client/*"],
      "@server/*": ["src/server/*"]
    },

    /* Disable unused vars checking (handled by ESLint) */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "index.ts",
    "src/client/auto-imports.d.ts",
    "src/client/components.d.ts",
    "src/client/typed-router.d.ts"
  ],
  "exclude": ["src/**/*.bun.test.ts"]
}
