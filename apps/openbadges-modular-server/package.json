{
  "name": "openbadges-modular-server",
  "version": "1.0.2",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "type-check": "tsc --noEmit --skipLibCheck",
    "check:all": "bun run lint && bun run typecheck && bun run test",
    "test": "DB_TYPE=sqlite bun test",
    "test:unit": "DB_TYPE=sqlite bun test tests/unit tests/infrastructure tests/core tests/domains tests/api tests/auth",
    "test:integration": "DB_TYPE=sqlite bun test tests/integration",
    "test:coverage": "DB_TYPE=sqlite bun test tests/unit tests/infrastructure tests/core tests/domains tests/api tests/auth tests/integration --coverage",
    "test:core": "bun test --pattern \"!tests/infrastructure/database/**\"",
    "test:sqlite": "DB_TYPE=sqlite bun test tests/infrastructure/database/modules/sqlite",
    "test:pg": "NODE_ENV=test DB_TYPE=postgresql DATABASE_URL=postgresql://testuser:testpassword@localhost:5433/openbadges_test bun test tests/infrastructure/database/modules/postgresql",
    "test:pg:coverage": "bun test --coverage tests/infrastructure/database/modules/postgresql",
    "test:pg:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:pg:teardown": "docker-compose -f docker-compose.test.yml down",
    "test:pg:with-docker": "./scripts/test-pg-with-docker.sh",
    "db:generate": "drizzle-kit generate",
    "db:generate:pg": "DB_TYPE=postgresql drizzle-kit generate",
    "db:generate:sqlite": "DB_TYPE=sqlite drizzle-kit generate",
    "db:migrate": "bun run src/infrastructure/database/migrations/run.ts",
    "db:migrate:pg": "DB_TYPE=postgresql bun run src/infrastructure/database/migrations/run.ts",
    "db:migrate:sqlite": "DB_TYPE=sqlite bun run src/infrastructure/database/migrations/run.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:pg": "DB_TYPE=postgresql drizzle-kit studio",
    "db:studio:sqlite": "DB_TYPE=sqlite drizzle-kit studio",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "build:migrations": "bun build src/infrastructure/database/migrations/run.ts --target bun --outdir dist/migrations --bundle",
    "db:test:pg:start": "docker compose -f docker-compose.test.yml up -d --wait",
    "db:test:pg:stop": "docker compose -f docker-compose.test.yml down --volumes",
    "db:test:pg:reset": "docker exec openbadges-modular-server-test-db-pg-1 psql -U testuser -d postgres -c \"DROP DATABASE IF EXISTS openbadges_test;\" && docker exec openbadges-modular-server-test-db-pg-1 psql -U testuser -d postgres -c \"CREATE DATABASE openbadges_test;\"",
    "db:test:pg:migrate": "NODE_ENV=test DB_TYPE=postgresql DATABASE_URL=postgresql://testuser:testpassword@localhost:5433/openbadges_test bun run db:generate:pg && NODE_ENV=test DB_TYPE=postgresql DATABASE_URL=postgresql://testuser:testpassword@localhost:5433/openbadges_test bun run db:migrate:pg",
    "test:e2e:pg:setup": "bun run db:test:pg:start && bun run db:test:pg:migrate && docker cp drizzle/pg-migrations/0000_strong_gideon.sql openbadges-modular-server-test-db-pg-1:/tmp/migration.sql && docker exec openbadges-modular-server-test-db-pg-1 psql -U testuser -d openbadges_test -f /tmp/migration.sql",
    "test:e2e:pg:run": "NODE_ENV=test DB_TYPE=postgresql DATABASE_URL=postgresql://testuser:testpassword@localhost:5433/openbadges_test bun test ./tests/e2e",
    "test:e2e:pg": "./scripts/run-pg-e2e-tests.sh",
    "db:test:sqlite:migrate": "NODE_ENV=test DB_TYPE=sqlite SQLITE_DB_PATH=$(pwd)/tests/e2e/test_database.sqlite bun run db:generate:sqlite && NODE_ENV=test DB_TYPE=sqlite SQLITE_DB_PATH=$(pwd)/tests/e2e/test_database.sqlite bun run db:migrate:sqlite",
    "test:e2e:sqlite:run": "NODE_ENV=test DB_TYPE=sqlite SQLITE_DB_PATH=$(pwd)/tests/e2e/test_database.sqlite bun test ./tests/e2e",
    "test:e2e:sqlite": "NODE_ENV=test DB_TYPE=sqlite bun test ./tests/e2e",
    "test:e2e": "bun run test:e2e:sqlite && bun run test:e2e:pg",
    "docker:build": "docker build -t openbadges-modular-server:local .",
    "docker:build:multiarch": "./scripts/build-multiarch.sh",
    "docker:build:multiarch:push": "./scripts/build-multiarch.sh --push --no-load"
  },
  "lint-staged": {
    "*.ts": [
      "bun run lint:fix",
      "tsc-files --noEmit --skipLibCheck"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@rollercoaster-dev/shared-config": "workspace:*",
    "@types/pg": "^8.11.13",
    "@typescript-eslint/parser": "^8.0.0",
    "drizzle-kit": "^0.31.8",
    "get-port": "^7.1.0",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.6",
    "@neondatabase/serverless": "^1.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@rollercoaster-dev/rd-logger": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^10.0.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.9.1",
    "chalk": "^5.4.1",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.8",
    "hono-rate-limiter": "^0.4.2",
    "jose": "^6.0.11",
    "lru.min": "^1.1.2",
    "mock-aws-s3": "^4.0.2",
    "nock": "^14.0.4",
    "openapi3-ts": "^4.4.0",
    "openbadges-types": "workspace:*",
    "postgres": "^3.4.5",
    "swagger-ui-dist": "^5.26.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  }
}
