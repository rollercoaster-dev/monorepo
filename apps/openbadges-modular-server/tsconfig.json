{
  "extends": "@rollercoaster-dev/shared-config/tsconfig",
  "compilerOptions": {
    /* Project references */
    "composite": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,

    /* Environment overrides for Bun server */
    "lib": ["ESNext", "DOM"],
    "target": "ES2017",
    "module": "ES2022",
    "jsx": "react-jsx",
    "allowJs": true,

    /* Module resolution for Bun */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "emitDeclarationOnly": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@domains/*": ["src/domains/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@types/*": ["src/types/*"],
      "@tests/*": ["tests/*"]
    },

    /* Override shared-config's strict mode for gradual migration */
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "ignoreDeprecations": "5.0",

    /* Local unused variable checking (ESLint handles this) */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "drizzle.config.ts",
    "drizzle-config-helper.ts"
  ],
  "exclude": ["node_modules"]
}
