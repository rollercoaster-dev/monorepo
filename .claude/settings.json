{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/install-dependencies.sh",
            "description": "Install dependencies (web only, skips on local)"
          },
          {
            "type": "command",
            "command": "bun \"$CLAUDE_PROJECT_DIR\"/packages/claude-knowledge/src/cli/index.ts session-start",
            "description": "Load relevant knowledge for session context"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"$CLAUDE_PROJECT_DIR\"/packages/claude-knowledge/src/cli/index.ts session-end",
            "description": "Extract and store learnings via LLM at session end"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"$CLAUDE_PROJECT_DIR\"/packages/claude-knowledge/src/cli/index.ts session-end --interrupted",
            "description": "Extract and store learnings before compaction (mark as interrupted)"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh project list:*)",
      "Bash(gh project:*)",
      "Bash(gh project item-add:*)",
      "Bash(gh project item-edit:*)",
      "Bash(gh repo view:*)",
      "Bash(gh label list:*)",
      "Bash(gh api:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(bun install:*)",
      "Bash(bun test:*)",
      "Bash(bun build:*)",
      "Bash(bun dev:*)",
      "Bash(bun run:*)",
      "Bash(bun scripts/checkpoint-cli.ts:*)",
      "Bash(bun packages/claude-knowledge/src/cli/index.ts:*)",
      "Bash(bun packages/claude-workflows/src/cli.ts:*)",
      "Bash(./scripts/worktree-manager.sh:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git worktree:*)",
      "Bash(git rebase:*)",
      "Bash(git fetch:*)",
      "Bash(git rev-parse:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr checks:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(rm -f .claude/dev-plans/:*)",
      "Bash(rm .claude/dev-plans/:*)",
      "Skill(board-manager)",
      "Skill(graph-query)",
      "Skill(docs-search)",
      "Skill(knowledge-query)",
      "Edit",
      "Write"
    ],
    "deny": ["Bash(sudo:*)"],
    "ask": []
  }
}
