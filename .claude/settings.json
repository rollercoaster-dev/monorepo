{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/install-dependencies.sh",
            "description": "Install pnpm dependencies on session startup"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/install-dependencies.sh",
            "description": "Install pnpm dependencies on session resume"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh project list:*)",
      "Bash(gh project:*)",
      "Bash(gh project item-add:*)",
      "Bash(gh project item-edit:*)",
      "Bash(gh repo view:*)",
      "Bash(gh label list:*)",
      "Bash(gh api:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(bun install:*)",
      "Bash(bun test:*)",
      "Bash(bun build:*)",
      "Bash(bun dev:*)",
      "Bash(bun run:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Edit",
      "Write"
    ],
    "deny": [],
    "ask": []
  }
}
