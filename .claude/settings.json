{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/install-dependencies.sh",
            "description": "Install pnpm dependencies on session startup"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/install-dependencies.sh",
            "description": "Install pnpm dependencies on session resume"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh project list:*)",
      "Bash(gh project:*)",
      "Bash(gh repo view:*)",
      "Bash(gh label list:*)",
      "Bash(gh api:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(bun install:*)",
      "Bash(bun test:*)",
      "Bash(bun build:*)",
      "Bash(bun dev:*)",
      "Bash(git checkout:*)"
    ],
    "deny": [],
    "ask": []
  }
}
