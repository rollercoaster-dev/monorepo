{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/install-dependencies.sh",
            "timeout": 30000,
            "description": "Install dependencies (web only, skips on local)"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh project list:*)",
      "Bash(gh project:*)",
      "Bash(gh project item-add:*)",
      "Bash(gh project item-edit:*)",
      "Bash(gh repo view:*)",
      "Bash(gh label list:*)",
      "Bash(gh api:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(bun install:*)",
      "Bash(bun test:*)",
      "Bash(bun build:*)",
      "Bash(bun dev:*)",
      "Bash(bun run:*)",
      "Bash(./scripts/worktree-manager.sh:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git worktree:*)",
      "Bash(git rebase:*)",
      "Bash(git fetch:*)",
      "Bash(git rev-parse:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(rm -f .claude/dev-plans/:*)",
      "Bash(rm .claude/dev-plans/:*)",
      "Skill(board-manager)",
      "Edit",
      "Write"
    ],
    "deny": ["Bash(sudo:*)"],
    "ask": []
  }
}
